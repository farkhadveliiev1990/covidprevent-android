<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="28dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_profile_image"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/ic_pizza" />

                    <LinearLayout
                        android:layout_width="180dp"
                        android:layout_height="36dp"
                        android:layout_marginTop="16dp"
                        android:gravity="center"
                        android:background="@drawable/grey_4">

                        <EditText
                            android:id="@+id/txt_profile_username"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:textColor="@color/colorTextBlack"
                            android:textAlignment="center"
                            android:textSize="14dp"
                            android:maxLength="20"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/profile_full_name"
                        style="@style/text.black.16" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_weight="45"
                        android:gravity="center_vertical"
                        android:paddingEnd="8dp"
                        android:paddingStart="8dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/grey_rectangle">

                        <EditText
                            android:id="@+id/edt_profile_full_name"
                            android:layout_width="match_parent"
                            style="@style/text.black.14"
                            android:background="@null"
                            android:textColor="@color/colorTextBlack"
                            android:text="wWer123"
                            android:lines="1" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/lbl_profile"
                        android:text="CIN" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@drawable/grey_rectangle"
                        android:gravity="center_vertical"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:layout_marginEnd="40dp" >

                        <EditText
                            android:id="@+id/edt_profile_cin"
                            android:layout_width="match_parent"
                            style="@style/text.black.14"
                            android:textColor="@color/colorTextBlack"
                            android:background="@null"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_marginStart="4dp"
                        style="@style/text.black.16"
                        android:text="@string/txt_age" />

                    <LinearLayout
                        android:layout_marginStart="8dp"
                        android:layout_width="45dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/grey_rectangle"
                        android:gravity="center_vertical"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp" >

                        <EditText
                            android:id="@+id/edt_profile_age"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:inputType="number"
                            android:textColor="@color/colorTextBlack"
                            android:lines="1"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_marginStart="4dp"
                        android:gravity="center_vertical"
                        android:layout_alignParentEnd="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/profile_gender"
                            android:textColor="@color/colorTextBlack"
                            android:textSize="16dp"
                            android:layout_marginStart="8dp" />

                        <LinearLayout
                            android:layout_marginStart="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/grey_rectangle"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <Spinner
                                android:layout_margin="2dp"
                                android:id="@+id/spiner_profile_gender"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:scrollbars="none"
                                android:spinnerMode="dropdown" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/lbl_profile"
                        android:text="@string/signin_email" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:paddingEnd="12dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/grey_rectangle">

                        <EditText
                            android:id="@+id/edt_profile_email"
                            android:layout_width="match_parent"
                            style="@style/text.black.14"
                            android:background="@null"
                            android:layout_marginStart="8dp"
                            android:textColor="@color/colorTextBlack"
                            android:lines="1"
                            android:hint="@string/signin_email"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/lbl_profile"
                        android:text="@string/profile_phone" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:paddingEnd="12dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/grey_rectangle">

                        <TextView
                            android:id="@+id/edt_profile_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:background="@null"
                            android:textColor="@color/colorTextBlack"
                            android:inputType="phone"
                            android:lines="1"/>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/lbl_profile"
                        android:text="@string/location" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/grey_rectangle">

                        <TextView
                            android:id="@+id/edt_profile_location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:textSize="14dp"
                            android:textColor="@color/colorTextBlack"/>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llt_province_district"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="vertical"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_marginStart="4dp"
                            style="@style/text.black.16"
                            android:text="@string/profile_province" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:layout_weight="1"
                            android:layout_marginTop="4dp"
                            android:layout_marginStart="8dp"
                            android:gravity="center_vertical"
                            android:background="@drawable/grey_rectangle">

                            <TextView
                                android:id="@+id/txt_profile_province"
                                style="@style/text.black.14"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_marginStart="12dp"
                                android:text="@string/profile_province" />

                            <Spinner
                                android:id="@+id/spn_profile_province"
                                android:layout_width="36dp"
                                android:layout_height="36dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="vertical"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_marginStart="4dp"
                            style="@style/text.black.16"
                            android:text="Distrito" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginStart="8dp"
                            android:gravity="center_vertical"
                            android:background="@drawable/grey_rectangle">

                            <TextView
                                android:id="@+id/txt_profile_district"
                                style="@style/text.black.14"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_marginStart="12dp"
                                android:text="Distrito" />

                            <Spinner
                                android:id="@+id/spn_profile_district"
                                android:layout_width="36dp"
                                android:layout_height="match_parent" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_marginStart="4dp"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="Estado"
                        style="@style/text.black.16" />

                    <ImageView
                        android:id="@+id/img_profile_covid_image"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleType="fitXY"
                        android:layout_marginStart="4dp"
                        android:src="@drawable/ic_covid_no"
                        android:layout_marginEnd="12dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:id="@+id/llt_profile_save"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/grey_4"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="12dp"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/txt_profile_edit"
                            style="@style/text.black.16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Guardar" />

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</FrameLayout>