<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llt_item_statistics_date"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/txt_item_statistics_date"
                style="@style/text.blue.20"
                android:text="04/04/2020"
                android:layout_marginStart="12dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@color/colorWhite">

            <ImageView
                android:id="@+id/img_statistics_covid_status"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_covid_no"
                android:layout_marginStart="12dp" />

            <TextView
                android:id="@+id/txt_statistics_title"
                style="@style/text.black.14"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/statistics_temp_date"
                android:layout_marginStart="8dp"/>

            <ImageView
                android:id="@+id/img_statistics_more"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_more_grey"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="12dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llt_line"
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:background="@color/colorTextGrey"
            android:orientation="horizontal" />

    </LinearLayout>

</LinearLayout>